@model SuccessHotelierHub.Models.PreferenceVM
@{
    ViewBag.Title = "Create Preference";
}

<section class="content-header">
    <h1>
        Preference <small>Create</small>
    </h1>
    <ol class="breadcrumb m-r-xs">
        <li><a href="@Url.Action("Index","Home")"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="">Preference</li>
        <li class="active">Create</li>
    </ol>
</section>

<section class="content">
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Preference Details</h3>
        </div>
        @using (Html.BeginForm("Create", "Preference", FormMethod.Post, new { id = "frmPreference", enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <div class="box-body">
                <div class="col-md-6 col-sm-12 col-xs-12 padding-zero">
                    <label for="Code" class="col-lg-3 col-md-4 col-sm-3 col-xs-12 text-right text-left-media-lbl padding_left">Preference Code</label>
                    <div class="col-md-6 col-sm-4 col-xs-12 padding-zero">                        
                        @Html.TextBoxFor(m => m.Code, new { @class = "form-group form-control", placeholder = "Code" })
                    </div>
                </div>
                <div class="clearfix"></div>
                <div class="col-md-6 col-sm-12 col-xs-12 padding-zero">
                    <label for="Description" class="col-lg-3 col-md-4 col-sm-3 col-xs-12 text-right text-left-media-lbl padding_left">Preference</label>
                    <div class="col-md-6 col-sm-4 col-xs-12 padding-zero">                        
                        @Html.TextBoxFor(m => m.Description, new { @class = "form-group form-control", placeholder = "Preference" })
                    </div>
                </div>
                <div class="clearfix"></div>
                <div class="col-md-6 col-sm-12 col-xs-12 padding-zero">
                    <label for="IsActive" class="col-lg-3 col-md-4 col-sm-3 col-xs-12 text-right text-left-media-lbl padding_left">Is Active</label>
                    <div class="col-md-6 col-sm-4 col-xs-12 padding-zero">
                        <label class="col-md-4 col-sm-4 col-xs-6 container1">                            
                            @Html.CheckBoxFor(m => m.IsActive)
                            <span class="checkmark"></span>                            
                        </label>
                    </div>
                </div>
                <div class="clearfix"></div>
                <hr class="hr_margin" />
                <div class="col-md-6 col-sm-12 col-xs-12 padding-zero m-b-sm">
                    <div class="col-lg-offset-3 col-lg-9 col-md-offset-4 col-md-8 col-sm-offset-3 col-sm-9 col-xs-12 padding-zero">
                        <button type="button" class="btn btn-success m-r-xs" onclick="return savePreference();">Save</button>                        
                        <a href="@Url.Action("List", "Preference")" class="btn btn-danger">Cancel</a>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

<script type="text/javascript">
    function validatePreference() {
        var code= $("#Code").val();
        var description = $("#Description").val();        

        var errorMessage = "";
        var blnValid = true;

        if (IsNullOrEmpty(code)) {
            errorMessage += "Please enter code." + Delimeter.BREAKLINE + "";
            blnValid = false;
        }
        if (IsNullOrEmpty(description)) {
            errorMessage += "Please enter description." + Delimeter.BREAKLINE + "";
            blnValid = false;
        }

        if (!blnValid) {
            showToaster(errorMessage, ToasterType.ERROR);
            return false;
        }
        return blnValid;
    }


    function savePreference() {

        if (validatePreference()) {
            $.ajax({
                beforeSend: function (xhr) {
                    showLoader();
                },
                error: function (result) {                    
                    showToaster(result.responseText, ToasterType.ERROR);
                },
                complete: function () {
                    hideLoader();
                },
                url: '@Url.Content("~/Preference/Create")',
                type: 'POST',
                data: $('#frmPreference').serialize(),
                success: function (response) {
                    if (response.IsSuccess == false) {                        
                        showToaster(response.errorMessage, ToasterType.ERROR);
                    }
                    else {                        
                        showToaster("Preference details saved successfully", ToasterType.SUCCESS);
                        
                        setTimeout(function () {
                            redirectTo('/Preference/List');
                        }, 1000);
                    }
                }
            });
            return false;
        }
    }
</script>

