    function validateReservationData() {

        var errorMessage = "";
        var blnValid = true;

        var profileId = $('form#frmReservation #ProfileId').val();

        if (IsNullOrEmpty(profileId)) {
            showToaster("Please search and select profile again.", ToasterType.ERROR);
