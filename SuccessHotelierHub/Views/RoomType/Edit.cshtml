@model SuccessHotelierHub.Models.RoomTypeVM
@{
    ViewBag.Title = "Edit Room Type";
}

<section class="content-header">
    <h1>
        Room Type <small>Edit</small>
    </h1>
    <ol class="breadcrumb m-r-xs">
        <li><a href="@Url.Action("Index","Home")"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="">Room Type</li>
        <li class="active">Edit</li>
    </ol>
</section>


<section class="content">
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Room Type Details</h3>
        </div>
        @using (Html.BeginForm("Edit", "RoomType", FormMethod.Post, new { id = "frmRoomType", enctype = "multipart/form-data" }))
            {
            @Html.AntiForgeryToken()

            <!--HIDDEN FIELD-->
            @Html.HiddenFor(m => m.Id)
            <!--HIDDEN FIELD-->

            <div class="box-body">
                <div class="col-md-6 col-sm-12 col-xs-12 padding-zero">
                    <label for="RoomTypeCode" class="col-lg-3 col-md-4 col-sm-3 col-xs-12 text-right text-left-media-lbl padding_left">
                        Room Type Code *
                    </label>
                    <div class="col-md-6 col-sm-4 col-xs-12 padding-zero">
                        @Html.TextBoxFor(m => m.RoomTypeCode, new { @class = "form-group form-control", placeholder = "Room Type Code" })
                    </div>
                </div>
                <div class="clearfix"></div>
                <div class="col-md-6 col-sm-12 col-xs-12 padding-zero">
                    <label for="NoOfRooms" class="col-lg-3 col-md-4 col-sm-3 col-xs-12 text-right text-left-media-lbl padding_left">No. Of Rooms  *</label>
                    <div class="col-md-6 col-sm-4 col-xs-12 padding-zero">
                        @Html.TextBoxFor(m => m.NoOfRooms, new { @class = "form-group form-control", placeholder = "No Of Rooms", onkeydown = "onlyDigits(event)" })
                    </div>
                </div>
                <div class="clearfix"></div>
                <div class="col-md-6 col-sm-12 col-xs-12 padding-zero">
                    <label for="Description" class="col-lg-3 col-md-4 col-sm-3 col-xs-12 text-right text-left-media-lbl padding_left">Description</label>
                    <div class="col-md-6 col-sm-4 col-xs-12 padding-zero">
                        @Html.TextAreaFor(m => m.Description, new { @class = "form-group form-control", placeholder = "Description", rows = "3" })
                    </div>
                </div>                
                <div class="clearfix"></div>
                <div class="col-md-6 col-sm-12 col-xs-12 padding-zero ">
                    <label for="IsActive" class="col-lg-3 col-md-4 col-sm-3 col-xs-12 text-right text-left-media-lbl padding_left">Is Active</label>
                    <div class="col-md-6 col-sm-4 col-xs-12 padding-zero">
                        <label class="col-md-4 col-sm-4 col-xs-6 container1">
                            @Html.CheckBoxFor(m => m.IsActive)
                            <span class="checkmark"></span>
                        </label>
                    </div>
                </div>
                <div class="clearfix"></div>
                <hr class="hr_margin" />
                <div class="col-md-6 col-sm-12 col-xs-12 padding-zero m-b-sm">
                    <div class="col-lg-offset-3 col-lg-9 col-md-offset-4 col-md-8 col-sm-offset-3 col-sm-9 col-xs-12 padding-zero">
                        <button type="button" class="btn btn-success m-r-xs" onclick="return updateRoomType();">Update</button>
                        <a href="@Url.Action("List", "RoomType")" c class="btn btn-danger">Cancel</a>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

<script type="text/javascript">
    function validateRoomType() {
        var roomTypeCode = $("#RoomTypeCode").val();
        var noOfRooms = $("#NoOfRooms").val();

        var errorMessage = "";
        var blnValid = true;

        if (IsNullOrEmpty(roomTypeCode)) {
            errorMessage += "Please enter room type code." + Delimeter.BREAKLINE + "";
            blnValid = false;
        }
        if (IsNullOrEmpty(noOfRooms)) {
            errorMessage += "Please no of rooms." + Delimeter.BREAKLINE + "";
            blnValid = false;
        }

        if (!blnValid) {
            showToaster(errorMessage, ToasterType.ERROR);
            return false;
        }
        return blnValid;
    }


    function updateRoomType() {

        if (validateRoomType()) {
            $.ajax({
                beforeSend: function (xhr) {
                    showLoader();
                },
                error: function (result) {
                    showToaster(result.responseText, ToasterType.ERROR);
                },
                complete: function () {
                    hideLoader();
                },
                url: '@Url.Content("~/RoomType/Edit")',
                type: 'POST',
                data: $('#frmRoomType').serialize(),
                success: function (response) {
                    if (response.IsSuccess == false) {
                        showToaster(response.errorMessage, ToasterType.ERROR);
                    }
                    else {
                        showToaster("Room Type details updated successfully", ToasterType.SUCCESS);

                        setTimeout(function () {
                            redirectTo('@Url.Content("~/RoomType/List")');
                        }, 1000);
                    }
                }
            });
            return false;
        }
    }
</script>