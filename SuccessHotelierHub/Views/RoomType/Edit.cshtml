@model SuccessHotelierHub.Models.RoomTypeVM
@{
    ViewBag.Title = "Edit Room Type";
}

<section class="content-header">
    <h1>
        Room Type <small>Edit</small>
    </h1>
    <ol class="breadcrumb m-r-xs">
        <li><a href="@Url.Action("Index","Home")"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="">Room Type</li>
        <li class="active">Edit</li>
    </ol>
</section>


<section class="content">
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Room Type Details</h3>
        </div>
        @using (Html.BeginForm("Edit", "RoomType", FormMethod.Post, new { id = "frmRoomType", enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <!--HIDDEN FIELD-->
            @Html.HiddenFor(m => m.Id)
            <!--HIDDEN FIELD-->

            <div class="box-body pt_10 pb-0">
                <div class="row">
                    <div class="col-md-4 form-group">
                        @Html.LabelFor(m => m.RoomTypeCode, new { @class = "required-label" })
                        @Html.TextBoxFor(m => m.RoomTypeCode, new { @class = "form-control", placeholder = "Room Type Code" })
                        @Html.ValidationMessageFor(m => m.RoomTypeCode, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-4 form-group">
                        @Html.LabelFor(m => m.NoOfRooms, new { @class = "required-label" })
                        @Html.TextBoxFor(m => m.NoOfRooms, new { @class = "form-control", placeholder = "No Of Rooms", onkeydown = "onlyDigits(event)", @readonly = "readonly" })
                        @Html.ValidationMessageFor(m => m.NoOfRooms, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-4 form-group">
                        @Html.LabelFor(m => m.RoomCapacity)
                        @Html.TextBoxFor(m => m.RoomCapacity, new { @class = "form-control", placeholder = "Room Capacity", onkeydown = "onlyDigits(event)" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 form-group">
                        @Html.LabelFor(m => m.Description)
                        @Html.TextAreaFor(m => m.Description, new { @class = "form-control", placeholder = "Description", rows = "3" })
                    </div>
                    <div class="col-md-6 form-group m-t-lg">
                        <label class="container1" for="IsActive">
                            Is Active
                            @Html.CheckBoxFor(m => m.IsActive)
                            <span class="checkmark"></span>
                        </label>
                    </div>
                </div>
            </div>        
            <div class="box-footer text-right">
                <button type="button" class="btn btn-success m-r-xs" onclick="return updateRoomType();">Update</button>
                <a href="@Url.Action("List", "RoomType")" c class="btn btn-danger">Cancel</a>
            </div>
        }
    </div>
</section>

<script type="text/javascript">
    function validateRoomType() {
     
        var errorMessage = "";
        var blnValid = true;

        if ($("#frmRoomType").valid() == false) {
            showToaster("Please fill all the required field first", ToasterType.ERROR);
            blnValid = false;
        }

        return blnValid;
    }


    function updateRoomType() {

        if (validateRoomType()) {
            $.ajax({
                beforeSend: function (xhr) {
                    showLoader();
                },
                error: function (result) {
                    showToaster(result.responseText, ToasterType.ERROR);
                },
                complete: function () {
                    hideLoader();
                },
                url: '@Url.Content("~/RoomType/Edit")',
                type: 'POST',
                data: $('#frmRoomType').serialize(),
                success: function (response) {
                    if (response.IsSuccess == false) {
                        showToaster(response.errorMessage, ToasterType.ERROR);
                    }
                    else {
                        showToaster("Room Type details updated successfully", ToasterType.SUCCESS);

                        setTimeout(function () {
                            redirectTo('@Url.Content("~/RoomType/List")');
                        }, 1000);
                    }
                }
            });
            return false;
        }
    }
</script>