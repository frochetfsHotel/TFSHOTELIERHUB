@model SuccessHotelierHub.Models.CompanyVM
@{
    ViewBag.Title = "Create Company";
}

<section class="content-header">
    <h1>
        Company<small>Create</small>
    </h1>
    <ol class="breadcrumb m-r-xs">
        <li><a href="javascript:void(0);" onclick="setCurrentMenu('Dashboard','@Url.Content("~/Home/Index")');"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="">Company</li>
        <li class="active">Create</li>
    </ol>
</section>

<section class="content">
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Comapny Details</h3>
        </div>
        @using (Html.BeginForm("Create", "Company", FormMethod.Post, new { id = "frmCompany", enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="box-body pt_10 pb-0">
                <div class="row">
                    <div class="col-md-3 form-group">
                        @Html.LabelFor(m => m.CompanyName, new { @class = "required-label" })
                        @Html.TextBoxFor(m => m.CompanyName, new { @class = "form-control", placeholder = "Title" })
                        @Html.ValidationMessageFor(m => m.CompanyName, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-3 form-group">
                        @Html.LabelFor(m => m.CompanyAddress)
                        @Html.TextAreaFor(m => m.CompanyAddress, new { @class = "form-control", placeholder = "Description", rows = "3" })
                        @Html.ValidationMessageFor(m => m.CompanyAddress, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-3 form-group m-t-lg">
                        <label class="container1" for="IsActive">
                            Is Active
                            @Html.CheckBoxFor(m => m.IsActive, new { @checked = "checked" })
                            <span class="checkmark"></span>
                        </label>
                    </div>
                </div>
            </div>
            <div class="box-footer text-right">
                <button type="button" class="btn btn-success m-r-xs" onclick="return saveCompany();">Save</button>
                <a href="@Url.Action("List", "Company")" class="btn btn-danger">Cancel</a>
            </div>
        }
    </div>
</section>

<script type="text/javascript">
    function validateCompany() {

        var errorMessage = "";
        var blnValid = true;


        if ($("#frmCompany").valid() == false) {
            showToaster("Please fill all the required field first", ToasterType.ERROR);
            blnValid = false;
        }

        return blnValid;
    }


    function saveCompany() {

        if (validateCompany()) {
            $.ajax({
                url: '@Url.Content("~/Company/Create")',
                type: 'POST',
                data: $('#frmCompany').serialize(),
                success: function (response) {
                    if (response.IsSuccess == false) {
                        showToaster(response.errorMessage, ToasterType.ERROR);
                    }
                    else {
                        showToaster("Holiday details saved successfully", ToasterType.SUCCESS);

                        setTimeout(function () {
                            redirectTo('@Url.Content("~/Company/List")');
                        }, 1000);
                    }
                }
            });
            return false;
        }
    }
</script>

