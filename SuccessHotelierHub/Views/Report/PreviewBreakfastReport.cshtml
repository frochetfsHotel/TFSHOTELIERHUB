@model SuccessHotelierHub.Models.BreakFastReport
@using SuccessHotelierHub.Utility
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <style>
        p {
            text-align: center;
            font-weight: bold;
        }

        table, th, td {
            border-collapse: collapse;
            margin-top: 20px;
        }

            table thead th {
                background-color: #000;
                color: #fff;
            }


        .text_bold {
            font-weight: bold;
        }

        thead {
            border: 1px solid #000;
        }

        table {
            width: 96%;
            font-size: 14px;
            color: #333;
            font-weight: 400;
            text-align: left;
            margin: auto;
        }

        .invoice_header {
            background: #3c8dbc;
            color: #fff;
            text-align: center;
            padding: 5px 0;
        }

        .border_bottom {
            border-bottom: 1px solid #000;
        }


        tr.border_bottom td {
            border-bottom: 1px solid black;
        }

        tr.border_top td {
            border-top: 1px solid black;
        }

        .para {
            width: 74%;
            margin-left: 81px;
            text-align: justify;
            margin-top: 10px;
        }

        .img_margin {
            margin: auto;
            display: block;
            width: 250%;
            /*border-bottom: 1px solid #7c7c7c;*/
        }

        .text-right {
            text-align: right !important;
        }

        .footer {
            height: 75px;
            margin-top: 30px;
            margin-bottom: 10px;
        }

        .padding-zero {
            padding-left: 0 !important;
            padding-right: 0 !important;
        }

        .text-left {
            text-align: left !important;
        }

        .text-center {
            text-align: center !important;
        }

        .text-right {
            text-align: right !important;
        }

        #tblResults tr th, #tblResults tr td {
            border: 1px solid #000;            
            padding-left: 3px;
            padding-top: 3px;
            padding-bottom: 3px;            
        }
    </style>
    <title></title>
</head>

<body class="gray-bg" style="width: 800px; margin-left: auto; margin-right: auto;">
    <div class="row border-bottom white-bg dashboard-header">
        <div style="border:1px solid #dedede; box-shadow: 0px 0px 5px #dddddd; padding:10px;">
            <div style="font-size: 14px; color: #333; font-weight: 400; text-align: center; font-family: Calibri;  margin-top: 10px;margin-bottom: 20px;border:thick">
                <table style="border:none">
                    <tr>
                        <td style="width:100%;text-align:center" align="center">
                            <img src="http://www.tfshotelierhub.com/Content/img/invoice_logo.png" class="img_margin" />
                        </td>
                    </tr>
                </table>
                <br />
                <div style="text-align:center">
                    <table style="border:none">
                        <tr>
                            <td style="width:100%;text-align:left" valign="top">
                                <span class="mb5">
                                    <b>Date </b>: @(Model.Date) 
                                </span>
                            </td>
                        </tr>
                    </table>
                    <br />
                    <table class="table" id="tblResults" style="border:1px solid #000;">
                        <thead>
                            <tr class="">
                                <th class="text_bold">Room</th>
                                <th class="text_bold">Guest</th>
                                <th class="text_bold">Company</th>
                                <th class="text_bold">Rms</th>
                                <th class="text_bold">ADT</th>
                                <th class="text_bold">CHD</th>
                                <th class="text_bold">Status</th>
                                <th class="text_bold">ARR</th>
                                <th class="text_bold">DEP</th>
                                <th class="text_bold">VIP</th>
                                <th class="text_bold">Rate</th>
                                <th class="text_bold" style="width:5%">Breakfast Added</th>
                            </tr>
                        </thead>

                        @if (Model.Results != null && Model.Results.Count > 0)
                        {
                            <tbody>
                                @foreach (var result in Model.Results)
                                {
                                    <tr>
                                        <td>@result.RoomNumbers</td>
                                        <td>@result.GuestName</td>
                                        <td>@result.CompanyName</td>
                                        <td>@result.NoOfRoom</td>
                                        <td>@result.NoOfAdult</td>
                                        <td>@result.NoOfChildren</td>
                                        <td>IN</td>
                                        <td>@result.ArrivalDate</td>
                                        <td>@result.DepartureDate</td>
                                        <td>@result.VipName</td>
                                        <td>@result.RateTypeCode</td>
                                        <td class="text-center">@(result.IsBreakFastPackageAdded ? Html.Raw("Yes") : Html.Raw(""))</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="3" class="text-right" style="padding-right:10px;">Total</td>
                                    <td>@Model.Results.Sum(m => m.NoOfRoom)</td>
                                    <td>@Model.Results.Sum(m => m.NoOfAdult)</td>
                                    <td>@Model.Results.Sum(m => m.NoOfChildren)</td>
                                    <td colspan="6"></td>
                                </tr>
                            </tfoot>
                        }
                    </table>
                    <br />
                    <br />
                </div>
            </div>
        </div>
        <div style="clear:both"></div>
    </div>
</body>
</html>
