@model SuccessHotelierHub.Models.SearchRoomFeatureParametersVM
@{
    ViewBag.Title = "Search Room Features";
}
@section styles{
    <!-- DataTables -->
    <link rel="stylesheet" href="~/Content/css/AdminLTE/dataTables.bootstrap.min.css" type="text/css" />
}

@{
    var PagerName = "RoomFeaturesGrid";
}

<section class="content-header">
    <h1>
        Room Features <small>List</small>
    </h1>
    <ol class="breadcrumb m-r-xs">
        <li><a href="javascript:void(0);" onclick="setCurrentMenu('Dashboard','@Url.Content("~/Home/Index")');"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="">Room Features</li>
        <li class="active">Search</li>
    </ol>
</section>

<section class="content">
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Search Room Features</h3>
            <div class="pull-right box-tools">
                <a href="@Url.Action("Create","RoomFeatures")"
                   class="btn btn-info btn-sm" style="color: #fff">Add Room Features</a>
            </div>
        </div>
        <form class="frmRoomFeaturesList" enctype="multipart/form-data" method="post">
            <div class="box-body box-body-list">
                <div class="pt_10 pl_10 pr_10 searchBox_Border">
                    <div class="row">
                        <div class="col-md-4 form-group">
                            @Html.LabelFor(m => m.Name)
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Name" })
                        </div>
                        <div class="col-md-4 form-group">
                            @Html.LabelFor(m => m.Description)
                            @Html.TextAreaFor(m => m.Description, new { @class = "form-control", placeholder = "Description", rows = "3" })
                        </div>
                        <div class="col-md-4 form-group mt_25">
                            <button type="button" id="btnSearch" class="btn btn-success m-r-xs" onclick="searchRoomFeatures()">Search</button>
                            <button type="button" id="btnClear" class="btn btn-danger" onclick="clearRoomFeatures()">Clear</button>
                        </div>
                    </div>
                </div>



                <div class="col-xs-12 padding-zero m-t-md">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover table-striped" id="tblRoomFeatures">
                            <thead>
                                <tr>
                                    <th class="width_10"></th>
                                    <th class="width_20">Name</th>
                                    <th class="width_30">Description</th>
                                    <th class="width_10">Status</th>
                                    <th class="width_20">Action</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                    <div class="clearfix"></div>
                    <div class="text-left">
                        @Html.Partial("_Pagination", new SuccessHotelierHub.Models.PaginationVM() { TokenForEnableDisableButtons = PagerName, PageChangeMethod = "RoomFeaturesGridPageChange" })
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>


<script type="text/javascript">
    var currentPage = 1;
    var grdRoomFeatures;

    $(document).ready(function () {
        setTimeout(InitializeRoomFeaturesGrid, 200);

        $("input[type='text']").keyup(function (event) {
            if (event.keyCode === 13) {
                $("#btnSearch").click();
            }
        });
    });


    function SearchRoomFeaturesParameters(d) {
        var name = $('#Name').val();
        var description = $('#Description').val();
        d.PageNum = currentPage;
        d.Name = name;
        d.Description = description;
    }

    function RoomFeaturesGridDataBound(response) {
        if (response.IsSuccess == true) {
            @("PagerDataBound" + PagerName)(response.CurrentPage, response.PageSize, response.TotalRecords);
            return response.data;
        }
        else {
            showToaster(response.ErrorMsg, ToasterType.ERROR);
        }
    }


    function ReloadRoomFeaturesGrid() {
        grdRoomFeatures.ajax.url("@Url.Content("~/RoomFeatures/Search")").load();
    }

    function RoomFeaturesGridPageChange(cPage) {
        currentPage = cPage;
        ReloadRoomFeaturesGrid();
    }


    function InitializeRoomFeaturesGrid() {
        grdRoomFeatures = $('#tblRoomFeatures').DataTable({
            serverSide: true,
            ajax: {
                beforeSend: function (xhr) {
                    showLoader();
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    ShowErrorMessage(jqXHR.status, errorThrown);
                },
                complete: function () {
                    hideLoader();
                },
                url: '@Url.Content("~/RoomFeatures/Search")',
                data: SearchRoomFeaturesParameters,
                dataSrc: RoomFeaturesGridDataBound,
                type: "POST"
            },
            scrollCollapse: true,
            serverSide: true,
            processing: true,
            processing: "<span class='glyphicon glyphicon-refresh glyphicon-refresh-animate'>",
            ordering: true,
            bDestroy: true,
            paging: false,
            searching: false,
            bLengthChange: false,
            info: false,
            columnDefs: [
            {
                targets: 0,
                data: "CreatedOn",
                orderable: true,
                "visible": false
            },
            {
                targets: 1,
                data: "Name",
                orderable: true
            },
            {
                targets: 2,
                data: "Description",
                orderable: true
            },
            {
                targets: 3,
                data: "IsActive",
                orderable: false,
                render: function (data, type, full, meta) {
                    var isActive = full.IsActive;
                    if (isActive == true) {
                        return "Active";
                    } else {
                        return "In Active";
                    }
                }
            },
            {
                targets: 4,
                data: "Id",
                orderable: false,
                className: "text-center",
                render: function (data, type, full, meta) {
                    return '<a href="javascript:void(0);" onclick="GotoRoomFeaturesEdit(\'' + full.Id + '\')" '
                        + ' class="btn btn-success btn-xs m-r-xs">Edit</a> '
                        + ' <button type="button" class="btn btn-danger btn-xs"'
                        + ' onclick="deleteRoomFeatures(this,event,\'' + full.Id + '\')">Delete</button>';
                }
            }
            ],
            order: [[1, "asc"]],
            fnCreatedRow: function (nRow, aData, iDataIndex) {
                $(nRow).attr('ID', aData.ID)
            }
        })
    }

    function GotoRoomFeaturesEdit(Id) {
        var url = '@Url.Content("~/RoomFeatures/Edit/")' + Id;
        redirectTo(url);
    }

    function searchRoomFeatures() {
        currentPage = 1;
        ReloadRoomFeaturesGrid();
    }

    function clearRoomFeatures() {
        $('#Name').val('');
        $('#Description').val('');

        searchRoomFeatures();
    }

    function deleteRoomFeatures(item, e, id) {

        swal({
            title: 'Are you sure you want to delete?',
            type: 'warning',
            showCancelButton: true,
            showCloseButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes'
        }).then((result) => {
            if (result.value) {
                $.ajax({
                    beforeSend: function (xhr) {
                        showLoader();
                    },
                    error: function (jqXHR, textStatus, errorThrown) {
                        ShowErrorMessage(jqXHR.status, errorThrown);
                    },
                    complete: function () {
                        hideLoader();
                    },
                    url: '@Url.Content("~/RoomFeatures/Delete")',
                    type: 'POST',
                    data: { id: id },
                    success: function (response) {
                        if (response.IsSuccess == true) {

                            var tr = $('#tblRoomFeatures  tbody tr#' + id)
                            var row = grdRoomFeatures.row(tr);
                            var rowNode = row.node();
                            row.remove();
                            grdRoomFeatures.draw();

                            showToaster("Record deleted successfully", ToasterType.SUCCESS);
                        }
                        else {
                            showToaster(response.errorMessage, ToasterType.ERROR);
                        }
                    }
                });
            }
        });


    }
</script>


@section scripts {
    <script src="~/Scripts/AdminLTE/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/AdminLTE/dataTables.bootstrap.min.js"></script>
}